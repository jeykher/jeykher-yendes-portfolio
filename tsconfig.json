{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": ".",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "paths": {
            "@__test__/*": ["__test__/*"],
            "@adapters/*": ["adapters/*"],
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@contexts/*": ["contexts/*"],
            "@controllers/*": ["controllers/*"],
            "@formatters/*": ["formatters/*"],
            "@hooks/*": ["hooks/*"],
            "@interceptors/*": ["interceptors/*"],
            "@layouts/*": ["layouts/*"],
            "@mocks/*": ["mocks/*"],
            "@models/*": ["models/*"],
            "@api/*": ["pages/api/*"],
            "@pages/*": ["pages/*"],
            "@public/*": ["public/*"],
            "@redux/*": ["redux/*"],
            "@dispatchers/*": ["redux/dispatchers/*"],
            "@reducers/*": ["redux/reducers/*"],
            "@selectors/*": ["redux/selectors/*"],
            "@states/*": ["redux/states/*"],
            "@store/*": ["redux/store/*"],
            "@services/*": ["services/*"],
            "@styled-components/*": ["styled-components/*"],
            "@styles/*": ["styles/*"],
            "@themes/*": ["themes/*"],
            "@utils/*": ["utils/*"],
            "@/*": ["*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
